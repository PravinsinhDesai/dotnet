@using BOL;
@{
    Book book=(Book)ViewData["book"];
}

  <div class="text-center">
    <form method="post" action="/Book/UpdatedBook">
  <div class="form-group">
    <label for="id">Id</label>
    <input type="number" class="form-control" id="id" name="id" value= "@book.Id" placeholder="@book.Id" readonly>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name"  placeholder="@book.Name">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>